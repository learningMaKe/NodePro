<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:node="clr-namespace:NodePro.Core.Node;assembly=NodePro.Core">
    <Style x:Key="DefaultNodeLine" TargetType="{x:Type node:NodeLine}">
        <Setter Property="Background" Value="Gray" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type node:NodeLine}">
                    <Path
                        Data="{TemplateBinding Data}"
                        Stroke="{TemplateBinding Background}"
                        StrokeThickness="2" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>