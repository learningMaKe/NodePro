<UserControl
    x:Class="NodePro.Modules.Display.Views.DisplayView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:NodePro.Modules.Display.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:NodePro.Core.Model;assembly=NodePro.Core"
    xmlns:node="clr-namespace:NodePro.Core.Node;assembly=NodePro.Core"
    xmlns:viewmodels="clr-namespace:NodePro.Modules.Display.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:DisplayViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Button
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="OnClick"
            Content="点击我"
            PreviewMouseLeftButtonDown="OnMouseDown" />
        <node:NodeContainer
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Header="你好"
            IsSelected="True">
            <model:NodeElement Content="我要测试" />
            <model:NodeElement Content="测试啊，测试" />
        </node:NodeContainer>
        <node:NodeContainer
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Header="我也好">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Connect">
                    <i:InvokeCommandAction Command="{Binding ConnectCommand}" PassEventArgsToCommand="True" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <model:NodeElement Content="我也要测试" />
        </node:NodeContainer>

    </Grid>
</UserControl>
