<UserControl
    x:Class="NodePro.Modules.Display.Views.DisplayView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:NodePro.Modules.Display.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:NodePro.Abstractions.Models;assembly=NodePro.Abstractions"
    xmlns:node="clr-namespace:NodePro.Core.Node;assembly=NodePro.Core"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:NodePro.Modules.Display.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:DisplayViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="NodeConnect">
                <i:InvokeCommandAction Command="{Binding ConnectCommand}" PassEventArgsToCommand="True" />
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <node:NodeCanvas x:Name="NodeCanvas">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Loaded">
                    <i:InvokeCommandAction Command="{Binding CanvasLoadedCommand}" CommandParameter="{Binding ElementName=NodeCanvas}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <node:NodeContainer Header="你好啊">
                <model:NodeElement Content="测试呀" />
                <model:NodeElement Content="测测你的" />
            </node:NodeContainer>
            <node:NodeContainer
                Header="我也要测试"
                HeaderBackground="Orange"
                Position="300,200">
                <model:NodeElement Content="测试呀" />
                <model:NodeElement Content="测测你的" />
            </node:NodeContainer>
        </node:NodeCanvas>

        <Button
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="点击我">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                    <i:InvokeCommandAction Command="{Binding ClickedCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Button>
    </Grid>
</UserControl>
